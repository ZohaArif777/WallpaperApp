<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_selected="true">
        <shape android:shape="oval">
            <size android:width="15dp" android:height="15dp" />
            <solid android:color="@color/white"/> <!-- Filled when selected -->
            <stroke android:width="4dp" android:color="@color/pink"/> <!-- Border -->
        </shape>
    </item>

<!--     Default state (Transparent with border) -->
    <item>
        <shape android:shape="oval">
            <size android:width="15dp" android:height="15dp" />
            <solid android:color="@android:color/transparent"/> <!-- Transparent when not selected -->
            <stroke android:width="4dp" android:color="@color/pink"/> <!-- Border -->
        </shape>
    </item>
</selector>
