<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DBD6D6"
    tools:context=".setting.Setting">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/toolbar"
        android:backgroundTint="@color/darkpink"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp">

            <ImageButton
                android:id="@+id/btn_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:contentDescription="@string/back"
                android:src="@drawable/arrow"
                app:tint="@color/white" />

            <TextView
                android:id="@+id/toolbar_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/aclonica"
                android:text="@string/settings"
                android:textColor="@color/white"
                android:textSize="20sp" />
        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>
    <!-- Premium Layout -->
    <LinearLayout
        android:id="@+id/premium_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/layout_shape"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar">

        <TextView
            android:id="@+id/premium_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/premium"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/premium_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:drawableStart="@drawable/premium"
            android:drawableEnd="@drawable/lestarrow"
            android:fontFamily="@font/aclonica"
            android:gravity="start"
            android:paddingStart="2dp"
            android:paddingEnd="2dp"
            android:text="@string/buy_premium_version"
            android:textColor="@color/black"
            android:textSize="16sp" />
    </LinearLayout>

    <!-- Wallpaper Layout -->
    <LinearLayout
        android:id="@+id/wallpaper_setting"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/layout_shape"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/premium_layout">

        <TextView
            android:id="@+id/wallpaper_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/wallpaper_settings"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/wallpaper_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:backgroundTint="@color/white"
            android:drawableStart="@drawable/gallery"
            android:fontFamily="@font/aclonica"
            android:gravity="start"
            android:paddingStart="2dp"
            android:paddingEnd="2dp"
            android:text="@string/restore_to_system_wallpaper"
            android:textColor="@color/black"
            android:textSize="16sp" />
    </LinearLayout>
    <!-- General -->
    <LinearLayout
        android:id="@+id/general_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/layout_shape"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/wallpaper_setting">

        <TextView
            android:id="@+id/general_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/general"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/share_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:drawableStart="@drawable/share"
            android:fontFamily="@font/aclonica"
            android:gravity="start"
            android:paddingStart="2dp"
            android:paddingEnd="2dp"
            android:text="@string/share_app_with_friends_and_family"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <Button
            android:id="@+id/rate_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:backgroundTint="@color/white"
            android:drawableStart="@drawable/star"
            android:fontFamily="@font/aclonica"
            android:gravity="start"
            android:paddingStart="2dp"
            android:paddingEnd="2dp"
            android:text="@string/rate_application"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <Button
            android:id="@+id/privacy_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:drawableStart="@drawable/privacy"
            android:fontFamily="@font/aclonica"
            android:gravity="start"
            android:paddingStart="2dp"
            android:paddingEnd="2dp"
            android:text="@string/privacy_policy"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <!-- Version Button and TextView in one row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingTop="8dp">

            <Button
                android:id="@+id/version_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="?android:selectableItemBackground"
                android:backgroundTint="@color/white"
                android:drawableStart="@drawable/version"
                android:fontFamily="@font/aclonica"
                android:gravity="start"
                android:paddingStart="2dp"
                android:paddingEnd="2dp"
                android:text="@string/version"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/version_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:text="@string/_1_0_0"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
